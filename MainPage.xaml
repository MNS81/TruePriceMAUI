<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruePriceMAUI.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Программа показывает цену товара за кг. и оптимальный выбор." FontSize="15" HorizontalOptions="Center" />
            <Entry x:Name="PriceInput" Placeholder="Введите цену в рублях" Keyboard="Numeric"/>
            <Entry x:Name="WeightInput" Placeholder="Введите вес в граммах" Keyboard="Numeric"/>
            <Button x:Name="CalculateButton" Text="Посчитать" Clicked="OnCalculate"/>
            <Button x:Name="PriceListButton" Text="Огласите весь список пожалуйста" Clicked="OnPriceList"/>
            <Button x:Name="ResetButton" Text="Галя!!! У нас отмена" Clicked="OnReset" BackgroundColor="Red" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>